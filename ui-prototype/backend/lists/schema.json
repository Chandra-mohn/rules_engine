{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["list_name", "display_name", "values"],
  "properties": {
    "list_name": {
      "type": "string",
      "description": "Unique identifier for the list"
    },
    "display_name": {
      "type": "string",
      "description": "Human-readable name for display"
    },
    "description": {
      "type": "string",
      "description": "Description of the list purpose"
    },
    "schema_version": {
      "type": "string",
      "enum": ["v1", "v2", "both"],
      "description": "Schema version compatibility"
    },
    "values": {
      "type": "array",
      "description": "List of values",
      "items": {
        "type": "object",
        "required": ["code", "name"],
        "properties": {
          "code": {
            "type": "string",
            "description": "Unique code/identifier for the value"
          },
          "name": {
            "type": "string",
            "description": "Display name for the value"
          },
          "active": {
            "type": "boolean",
            "default": true,
            "description": "Whether this value is currently active"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer"
        }
      }
    }
  }
}
