{
  "scopeName": "source.rules",
  "name": "Rules DSL",
  "patterns": [
    { "include": "#frontmatter" },
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#function-calls" },
    { "include": "#entities" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#lists" },
    { "include": "#actions" }
  ],
  "repository": {
    "frontmatter": {
      "begin": "^---$",
      "end": "^---$",
      "name": "meta.frontmatter.rules",
      "patterns": [
        {
          "match": "^(context|effective|expires):",
          "name": "entity.name.tag.yaml.rules"
        },
        {
          "match": "\\d{4}-\\d{2}-\\d{2}",
          "name": "constant.numeric.date.rules"
        }
      ]
    },
    "comments": {
      "match": "//.*$",
      "name": "comment.line.double-slash.rules"
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(rule|actionset|if|then|elseif|else|endif|return|and|or|not|with|in|not_in|is_null|is_not_null|contains|starts_with|ends_with|matches|true|false|null)\\b",
          "name": "keyword.control.rules"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "match": "\\b(applicant|transaction|card|account)\\b",
          "name": "entity.name.type.rules"
        },
        {
          "match": "\\.(\\w+)",
          "captures": {
            "1": { "name": "variable.other.property.rules" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "(>=|<=|>|<|==|!=)",
          "name": "keyword.operator.comparison.rules"
        },
        {
          "match": "(\\+|-|\\*|/|%)",
          "name": "keyword.operator.arithmetic.rules"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.rules",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.rules"
            }
          ]
        },
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.rules",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.rules"
            }
          ]
        }
      ]
    },
    "numbers": {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.rules"
    },
    "function-calls": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "name": "entity.name.function.rules"
    },
    "lists": {
      "begin": "\\[",
      "end": "\\]",
      "name": "meta.structure.array.rules",
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#keywords" }
      ]
    },
    "actions": {
      "match": "\\b(approveApplication|rejectApplication|sendEmail|createAccount|issueCard|calculateLimit|checkFraud)\\b",
      "name": "entity.name.function.rules"
    }
  }
}
